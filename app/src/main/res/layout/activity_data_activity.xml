<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataActivity"
    android:layout_margin="@dimen/activity_margin"
    >

    <TextView
        android:id="@+id/tv_years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_years"
        android:textSize="20sp"
        android:paddingEnd="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/rg_years"/>

    <RadioGroup
        android:id="@+id/rg_years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_label_rate"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:padding="@dimen/activity_margin">
        <RadioButton
            android:id="@+id/rb_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:text="@string/ten"/>
        <RadioButton
            android:id="@+id/rb_fifteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:text="@string/fifteen"/>
        <RadioButton
            android:id="@+id/rb_thirty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thirty"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:checked="true"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_label_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/rg_years"
        app:layout_constraintStart_toStartOf="@id/tv_years"
        app:layout_constraintEnd_toEndOf="@id/tv_years"
        android:textSize="@dimen/text_size"
        android:text="@string/label_amount" />
    <EditText
        android:id="@+id/et_data_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_label_rate"
        app:layout_constraintTop_toBottomOf="@id/rg_years"
        app:layout_constraintEnd_toEndOf="@+id/rg_years"
        android:paddingTop="50dp"
       />
    <TextView
        android:id="@+id/tv_label_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_label_amount"
        app:layout_constraintTop_toBottomOf="@+id/et_data_amount"
        android:textSize="@dimen/text_size"
        android:paddingTop="50dp"
        android:text="@string/label_rate" />
    <EditText
        android:id="@+id/et_interest_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_label_rate"
        app:layout_constraintTop_toTopOf="@+id/tv_label_rate"
        app:layout_constraintEnd_toEndOf="@+id/et_data_amount"
        android:paddingTop="50dp"/>
    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done"
        app:layout_constraintTop_toBottomOf="@+id/et_interest_rate"
        app:layout_constraintStart_toEndOf="@id/tv_label_rate"
        android:layout_marginTop="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>